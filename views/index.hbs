<h1>Here is what's on the Menu:</h1>

<h2>Order Up! Ready to Serve.</h2>

<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="burgers/update/{{this.ID}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">Diggin In!</button>
				</form>

			<!--{{> burgers/delete-burger_name}}-->
			</li>
		{{/unless}}	
	{{/each}}
</ul>

<h2>Burgers Devoured So Far:</h2>

<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="burgers/update/{{this.ID}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="false">
					<button type="submit">Re-Order</button>
				</form>
			</li>
		{{/if}}
	{{/each}}	
</ul>

<h2>Order A New Burger</h2>